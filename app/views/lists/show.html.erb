<h1><%= @list.name %></h1>
<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary", style: "margin-bottom: 1rem"%>
<div class="row">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card mb-6 col-md-6" style="padding: 0;">
      <div class="row no-gutters">
        <div class="col-md-6">
          <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>'s poster" style="height: 400px;">
        </div>
        <div class="col-md-6">
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <h6 class="card-text">"<%= bookmark.comment %>"</h6>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <% if ((Time.now - bookmark.updated_at) / 86400).round == 0 %>
              <p class="card-text"><small class="text-muted">Last updated today</small></p>
            <% else %>
              <p class="card-text"><small class="text-muted">Last updated <%= ((Time.now - bookmark.updated_at) / 86400).round %> day<%= ((Time.now - bookmark.updated_at) / 86400).round == 1 ? "" : "s" %> ago</small></p>
            <% end %>
            <p class="card-text"><small class="text-muted"><%= bookmark.movie.rating %> stars</small></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
